<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ED82A6"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/eventView"
        android:fontFamily="@font/baminttf_ttf"
        android:id="@+id/titleText"
        android:textSize="30dp"
        android:text="비밀~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventView"
        android:background="#FCB8CF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <androidx.appcompat.widget.AppCompatButton
            android:text="ON"
            app:layout_constraintEnd_toStartOf="@id/number_picker1"
            android:id="@+id/openBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="60dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changeBtn"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/openBtn"
            app:layout_constraintEnd_toEndOf="@id/openBtn"
            app:layout_constraintTop_toBottomOf="@id/openBtn"
            android:layout_width="30dp"
            android:layout_height="40dp"/>
        <NumberPicker
            android:background="@color/number_picker_color"
            app:layout_constraintBottom_toBottomOf="@id/openBtn"
            app:layout_constraintTop_toTopOf="@id/openBtn"
            app:layout_constraintStart_toEndOf="@id/openBtn"
            app:layout_constraintEnd_toStartOf="@id/number_picker2"
            android:id="@+id/number_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <NumberPicker
            android:background="@color/number_picker_color"
            app:layout_constraintBottom_toBottomOf="@id/number_picker1"
            app:layout_constraintTop_toTopOf="@id/number_picker1"
            app:layout_constraintStart_toEndOf="@id/number_picker1"
            app:layout_constraintEnd_toStartOf="@id/number_picker3"
            android:id="@+id/number_picker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <NumberPicker
            android:background="@color/number_picker_color"
            app:layout_constraintBottom_toBottomOf="@id/number_picker2"
            app:layout_constraintTop_toTopOf="@id/number_picker2"
            app:layout_constraintStart_toEndOf="@id/number_picker2"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/number_picker3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>