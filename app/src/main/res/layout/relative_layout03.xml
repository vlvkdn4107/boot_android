<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
       특정 뷰 기준으로 배치하는 방법
       to_, of 가 들어가는 속성을 사용하면 된다.
       id(식별자) 에 대한 개념도 알아보자

    -->
    <TextView
        android:id="@+id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />

    <TextView
        android:layout_toRightOf="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
<!--android:layout_toRightOf="@id/view1" -->
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/view1"
        android:background="#9EE7C558"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_above="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#9EC265CD"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_above="@id/view1"
        android:layout_toRightOf="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#9ED693DE"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_above="@id/view1"
        android:layout_toLeftOf="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#9EC934DA"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_below="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#9E70E06C"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_below="@id/view1"
        android:layout_toRightOf="@id/view1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="#9E95C993"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/view1"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/view1"
        android:background="#9E22EA1B"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/view2"

        android:background="#FF5722"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/view2"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/view1"
        android:background="#009688"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/view2"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/view2"
        android:background="#E91E63"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/view2"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/view2"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/white" />



</RelativeLayout>